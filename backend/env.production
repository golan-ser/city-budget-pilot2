# Production Environment Configuration

NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Database (use environment variable in deployment)
DATABASE_URL=postgresql://username:password@your-production-host:5432/city_budget_prod

# Production Security (MUST BE CHANGED)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_IN_PRODUCTION
DEMO_TOKEN=PRODUCTION_SECURE_TOKEN_2024

# OpenAI Configuration
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo-1106
OPENAI_MAX_TOKENS=800

# Production Settings
LOG_LEVEL=warn
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# SSL and Security Headers
FORCE_HTTPS=true
TRUST_PROXY=true 